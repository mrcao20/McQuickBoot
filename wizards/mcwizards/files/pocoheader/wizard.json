{
    "version": 1,
    "supportedProjectTypes": [ ],
    "id": "A.McPocoHeader",
    "category": "O.C++",
    "trDescription": "创建一个IOC风格的POCO类",
    "trDisplayName": "Mc Poco Header File",
    "trDisplayCategory": "C++",
    "iconText": "h",
    "enabled": "%{JS: value('Plugins').indexOf('CppEditor') >= 0}",

    "options": 
	[
	    { "key": "FilePath", "value": "%{JS: Util.fileName(value('TargetPath'), Util.preferredSuffix('text/x-c++hdr'))}" },
		{ "key": "CN", "value": "%{FileName}" }
	],

    "pages" :
    [
        {
            "trDisplayName": "Location",
            "trShortTitle": "Location",
            "typeId": "File"
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Summary",
            "typeId": "Summary"
        }
    ],
    "generators" :
    [
        {
            "typeId": "File",
            "data":
            {
                "source": "file.h",
                "target": "%{FilePath}",
                "openInEditor": true,
                "options": { "key": "Cpp:License:FilePath", "value": "%{JS: Util.fileName(value(FilePath))}" }
            }
        }
    ]
}
